<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvBalao"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardBackgroundColor="?attr/colorAccent"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.185">

        <TextView
            android:id="@+id/tvNumeroBalao"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="25dp"
            android:text="1"
            android:textColor="?attr/colorPrimary"
            android:textSize="18dp" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNomeBalao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Marvel History"
        android:textAlignment="center"
        android:textColor="?attr/colorOnPrimary"
        app:layout_constraintEnd_toEndOf="@+id/cvBalao"
        app:layout_constraintStart_toStartOf="@+id/cvBalao"
        app:layout_constraintTop_toBottomOf="@+id/cvBalao" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvPontuacao"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="55dp"
        app:cardBackgroundColor="?attr/colorSecondaryVariant"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvBalao"
        app:layout_constraintStart_toStartOf="@+id/cvBalao">

        <TextView
            android:id="@+id/tvPontuacaoBalao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="200"
            android:textAlignment="center"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>