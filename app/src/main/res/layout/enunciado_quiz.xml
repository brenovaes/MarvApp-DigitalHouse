<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEnunciado"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvEnunciadoTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textAlignment="center" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNumeroPergunta"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="280dp"
        android:layout_marginBottom="90dp"
        app:cardBackgroundColor="@color/destaqueVermelho"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/cvEnunciado"
        app:layout_constraintEnd_toEndOf="@+id/cvEnunciado">

        <TextView
            android:id="@+id/tvNumeroDaPergunta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>